{% extends 'layout.html.twig' %}

{% block title %}Modificar llave{% endblock %}

{% block content %}
    {% if not es_nueva %}
        <h1>Modificar llave</h1>
    {% else %}
        <h1>Nueva llave</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <a href="{{ path('llave_listar') }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver al listado</a>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Guardar cambios</button>
    {% if not es_nueva %}<a href="{{ path('llave_eliminar', {'id': llave.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar llave</a>{% endif %}
    {{ form_end(form) }}

{% endblock %}
