{% extends 'layout.html.twig' %}

{% block title %}Listado de llaves prestadas{% endblock %}

{% block content %}
    <h1>Listado de llaves prestadas</h1>

    {% if is_granted('ROLE_SECRETARIO') %}
        <a href="{{ path('llave_listar') }}" class="btn btn-primary"><i class="fas fa-list-ul"></i> Ver todas</a>
    {% endif %}

    <table class="table table-sm">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripción</th>
                <th>Dependencia</th>
                <th>Fecha de préstamo</th>
                <th>Prestada a</th>
            </tr>
        </thead>
        <tbody>
            {% for llave in llaves %}
                <tr>
                    <td>{{ llave.codigo }}</td>
                    <td>{{ llave.descripcion }}</td>
                    <td>{{ llave.dependencia.nombre }}</td>
                    <td>{{ llave.fechaPrestamo|date('d/m/Y') }}</td>
                    <td>{{ llave.usuario.nombre }} {{ llave.usuario.apellidos }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
