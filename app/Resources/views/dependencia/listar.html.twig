{% extends 'layout.html.twig' %}

{% block title %}Listado de dependencias{% endblock %}

{% block content %}
    <h1>Listado completo de dependencias{% if is_granted('DEPENDENCIA_CREAR') %} <a href="{{ path('dependencia_nueva') }}" class="btn btn-success"><i class="fas fa-plus"></i> Nueva dependencia</a>{% endif %}</h1>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Responsables</th>
            </tr>
        </thead>
        <tbody>
            {% for dependencia in dependencias %}
                <tr>
                    <td>
                        {% if is_granted('DEPENDENCIA_MODIFICAR', dependencia) %}
                            <a href="{{ path('dependencia_editar', {'id': dependencia.id}) }}">{{ dependencia.nombre }}</a>
                        {% else %}
                            {{ dependencia.nombre }}
                        {% endif %}
                    </td>
                    <td>{{ dependencia.responsables|join('; ') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
